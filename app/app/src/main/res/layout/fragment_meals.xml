<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020">

    <TextView
        android:id="@+id/meals_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/back_arrow_meals"
        android:fontFamily="@font/roboto_bold"
        android:text="Zalecane potrawy na dany dzień"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/back_arrow_meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_24px"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/breakfast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meals_text"
        android:text="Śniadanie"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/breakfast_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakfast_text"
        android:text="jajecznica z boczkiem"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/lunch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakfast_value"
        android:text="Lunch"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/lunch_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lunch_text"
        android:text="2x kanapki z szynką"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/dinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lunch_value"
        android:text="Obiad"
        android:textColor="#fff"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/dinner_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dinner_text"
        android:text="filet z kurczaka razem z kluskami śląskimi"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/supper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dinner_value"
        android:text="Kolacja"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/supper_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supper_text"
        android:text="jajecznica z boczkiem"
        android:textColor="#fff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"/>


</RelativeLayout>