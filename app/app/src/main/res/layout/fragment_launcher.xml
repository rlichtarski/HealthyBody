<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020">

    <TextView
        android:id="@+id/heart_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/heart_hdpi" />

    <TextView
    android:id="@+id/enter_data_txt_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/heart_icon"
    android:layout_marginTop="15dp"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/roboto_bold"
    android:text="Zadbaj o swoje zdrowie"
    android:textColor="#fff"
    android:textSize="30sp" />

    <TextView
        android:id="@+id/your_health_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_data_txt_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="razem z HealthyBody"
        android:textColor="#fff"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_health_txt_view"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#303030"
            app:cardCornerRadius="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/register_input_email"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_input_username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/input_field"
                    android:hint="Adres e-mail"
                    android:textColorHighlight="#fff"
                    android:textColorHint="#fff" />

                <Button
                    android:id="@+id/choose_login_button"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/launcher_button"
                    android:textColor="#fff"
                    android:text="Login" />

                <Button
                    android:id="@+id/choose_register_button"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/launcher_button"
                    android:layout_below="@+id/choose_login_button"
                    android:textColor="#fff"
                    android:text="Register" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>